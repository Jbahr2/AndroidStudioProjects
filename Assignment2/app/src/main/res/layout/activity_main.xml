<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_One"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="552dp"
        android:text="1" />

    <Button
        android:id="@+id/btn_Zero"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="630dp"
        android:text="0" />

    <Button
        android:id="@+id/btn_Total"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="207dp"
        android:layout_marginTop="630dp"
        android:text="Back"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_Two"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="553dp"
        android:layout_toEndOf="@+id/btn_One"
        android:text="2" />

    <Button
        android:id="@+id/btn_Four"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="474dp"
        android:layout_toEndOf="@+id/btn_One"
        android:text="4" />

    <Button
        android:id="@+id/btn_Seven"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-79dp"
        android:layout_marginTop="394dp"
        android:layout_toEndOf="@+id/btn_One"
        android:text="7" />

    <Button
        android:id="@+id/btn_Decimal"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-76dp"
        android:layout_marginTop="630dp"
        android:layout_toEndOf="@+id/btn_One"
        android:text="." />

    <Button
        android:id="@+id/btn_Total"
        android:layout_width="95dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="396dp"
        android:layout_toEndOf="@+id/btn_One"
        android:text="Total Bill"
        android:textSize="10\sp" />

    <Button
        android:id="@+id/btn_Round"
        android:layout_width="95dp"
        android:layout_height="159dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="171dp"
        android:layout_marginTop="553dp"
        android:layout_toEndOf="@+id/btn_One"
        android:text="Round Tip  First" />

    <Button
        android:id="@+id/btn_Eight"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="395dp"
        android:layout_toEndOf="@+id/btn_Seven"
        android:text="8" />

    <Button
        android:id="@+id/btn_Nine"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="395dp"
        android:layout_toEndOf="@+id/btn_Eight"
        android:text="9" />

    <Button
        android:id="@+id/btn_Five"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="474dp"
        android:layout_toEndOf="@+id/btn_Four"
        android:text="5" />

    <Button
        android:id="@+id/btn_Six"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="475dp"
        android:layout_toEndOf="@+id/btn_Five"
        android:text="6" />

    <Button
        android:id="@+id/btn_Three"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="554dp"
        android:layout_toEndOf="@+id/btn_Two"
        android:text="3" />

    <EditText
        android:id="@+id/txt_Total"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="332dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Total" />

    <EditText
        android:id="@+id/txt_Tip"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="%Tip" />
</RelativeLayout>